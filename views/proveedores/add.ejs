<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Añadir Proveedor</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/proveedores.css">
</head>
<body>
    <header>
        <h1>Sistema de Cafetería UNAPEC</h1>
        <nav>
            <ul class="menu-principal">
                <li><a href="/">Inicio</a></li>
                <li><a href="/about">Acerca de nosotros</a></li>
                <li><a href="/campus">Gestión de Campus</a></li>
                <li><a href="/cafeterias">Gestión de Cafeterías</a></li>
                <li><a href="/tipos-usuarios">Gestión de Tipos de Usuarios</a></li>
                <li><a href="/proveedores">Gestión de Proveedores</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Añadir Proveedor</h2>
        <form id="addProveedorForm" action="/proveedores/add" method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="nombre_comercial">Nombre Comercial:</label>
                <input type="text" id="nombre_comercial" name="nombre_comercial" required>
                <div id="nombre_comercial_error" class="error-message"></div>
            </div>
            <div class="form-group">
                <label for="rnc">RNC:</label>
                <input type="text" id="rnc" name="rnc" required>
                <div id="rnc_error" class="error-message"></div>
            </div>
            <div class="form-group">
                <label for="fecha_registro">Fecha de Registro:</label>
                <input type="date" id="fecha_registro" name="fecha_registro" required>
                <div id="fecha_registro_error" class="error-message"></div>
            </div>
            <div class="form-group">
                <label for="state">Estado:</label>
                <select id="state" name="state" required>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
                <div id="state_error" class="error-message"></div>
            </div>
            <button type="submit" class="button">Guardar</button>
        </form>
    </main>
    <footer>
        <p>&copy; 2024 Sistema de Cafetería UNAPEC</p>
    </footer>
    <script>
        function validateForm() {
            let isValid = true;
            const rnc = document.getElementById('rnc').value;
            const rncError = document.getElementById('rnc_error');

            if (!/^\d{9}$/.test(rnc)) {
                rncError.textContent = 'RNC inválido, debe contener 9 números';
                isValid = false;
            } else {
                rncError.textContent = '';
            }

            return isValid;
        }
    </script>
</body>
</html>
