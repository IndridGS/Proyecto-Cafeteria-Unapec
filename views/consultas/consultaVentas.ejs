<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta de Ventas</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>Sistema de Cafetería UNAPEC</h1>
        <nav>
            <ul class="menu-principal">
                <li><a href="/">Inicio</a></li>
                <li><a href="/consultas">Consulta de Ventas</a></li>
                <li><a href="/auth/logout">Cerrar sesión</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Consulta de Ventas</h2>
        <form action="/consultas/ventas" method="get">
            <div class="form-group">
                <label for="usuario">Usuario:</label>
                <input type="text" id="usuario" name="usuario">
            </div>
            <div class="form-group">
                <label for="fecha_inicio">Fecha Inicio:</label>
                <input type="date" id="fecha_inicio" name="fecha_inicio">
            </div>
            <div class="form-group">
                <label for="fecha_fin">Fecha Fin:</label>
                <input type="date" id="fecha_fin" name="fecha_fin">
            </div>
            <button type="submit" class="button">Buscar</button>
        </form>
        <% if (ventas && ventas.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Factura</th>
                        <th>Usuario</th>
                        <th>Fecha Venta</th>
                        <th>Monto</th>
                        <th>Comentario</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <% ventas.forEach(venta => { %>
                        <tr>
                            <td><%= venta.factura %></td>
                            <td><%= venta.usuario %></td>
                            <td><%= venta.fecha_venta %></td>
                            <td><%= venta.monto %></td>
                            <td><%= venta.comentario %></td>
                            <td><%= venta.estado %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No se encontraron ventas.</p>
        <% } %>
    </main>
    <footer>
        <p>&copy; 2024 Sistema de Cafetería UNAPEC</p>
    </footer>
    <script src="/js/menu.js"></script>
</body>
</html>

