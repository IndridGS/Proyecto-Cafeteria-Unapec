<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Cafeterías</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/cafeterias.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <div class="container">
        <header>
            <h1>Sistema de Cafetería UNAPEC</h1>
            <nav>
                <ul class="menu-principal">
                    <li><a href="/">Inicio</a></li>
                    <li class="gestion">
                        <a href="#">Gestión</a>
                        <ul class="submenu">
                            <li><a href="/campus">Campus</a></li>
                            <li><a href="/cafeterias">Cafeterías</a></li>
                            <li><a href="/tipos-usuarios">Tipos de Usuarios</a></li>
                            <li><a href="/proveedores">Proveedores</a></li>
                            <li><a href="/marcas">Marcas</a></li>
                            <li><a href="/usuarios">Usuarios</a></li>
                            <li><a href="/empleados">Gestión de Empleados</a></li>
                            <li><a href="/articulos">Artículos</a></li>   
                        </ul>
                    </li>
                    <li><a href="#">Ventas</a></li>
                    <li><a href="#">Consultas</a></li>
                    <!-- <li><a href="/auth/logout">Cerrar sesión</a></li> -->
                    <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i></a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h2>Lista de Cafeterías</h2>
            <a href="/cafeterias/add" class="button">Añadir Cafetería</a>
            <table>
                <thead>
                    <tr>
                        <th>Identificador</th>
                        <th>Descripción</th>
                        <th>Campus</th>
                        <th>Encargado</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% cafeterias.forEach(cafeteria => { %>
                        <tr>
                            <td><%= cafeteria.id %></td>
                            <td><%= cafeteria.description %></td>
                            <td><%= cafeteria.campus %></td>
                            <td><%= cafeteria.encargado %></td>
                            <td><%= cafeteria.state %></td>
                            <td>
                                <a href="/cafeterias/edit/<%= cafeteria.id %>">Editar</a>
                                <a href="/cafeterias/delete/<%= cafeteria.id %>" style="color: red;">Eliminar</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </main>
    </div>
    <footer>
        <p>&copy; 2024 Sistema de Cafetería UNAPEC</p>
    </footer>
    <script src="/js/menu.js"></script>
    <script>
        // Mantener visible el submenú de "Gestión" cuando se está en una de sus páginas
        document.addEventListener('DOMContentLoaded', function() {
            var gestionLinks = document.querySelectorAll('.gestion .submenu a');
            gestionLinks.forEach(function(link) {
                if (link.href === window.location.href) {
                    link.closest('.gestion').classList.add('active');
                }
            });
        });
    </script>
</body>
</html>
